{
  "name": "brewblox-ui",
  "version": "0.0.1",
  "description": "UI for the BrewBlox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "scripts": {
    "compose:down": "docker-compose down",
    "compose:up": "docker-compose up -d",
    "compose:new": "npm run compose:down && npm run compose:up",
    "serve": "npm run compose:new && vue-cli-service serve --open",
    "start": "npm run serve",
    "build": "vue-cli-service build",
    "test": "jest",
    "e2e": "npm run compose:new && vue-cli-service test:e2e --mode development",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "eslint": "eslint src --ext .js,.vue,.ts",
    "lint": "npm run tslint && npm run eslint",
    "e2e:open": "vue-cli-service e2e:open"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0"
  },
  "dependencies": {
    "@types/shortid": "0.0.29",
    "date-fns": "^1.29.0",
    "lodash": "^4.17.10",
    "plotly.js": "^1.39.4",
    "portal-vue": "^1.3.0",
    "quasar-extras": "^2.0.3",
    "quasar-framework": "^0.16.0",
    "query-string": "^6.1.0",
    "shortid": "^2.2.8",
    "typescript": "^3.0.1",
    "url-safe-string": "^1.1.0",
    "vue": "^2.5.16",
    "vue-class-component": "^6.0.0",
    "vue-i18n": "^7.6.0",
    "vue-plotly.js": "^1.1.0",
    "vue-property-decorator": "^6.0.0",
    "vue-router": "^3.0.1",
    "vuedraggable": "^2.16.0",
    "vuex": "^3.0.1",
    "vuex-typescript": "^3.0.2"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "@types/query-string": "^6.1.0",
    "@vue/cli-plugin-babel": "^3.0.0",
    "@vue/cli-plugin-e2e-cypress": "^3.0.0",
    "@vue/cli-plugin-eslint": "^3.0.0",
    "@vue/cli-plugin-typescript": "^3.0.0",
    "@vue/cli-plugin-unit-jest": "^3.0.0",
    "@vue/cli-service": "^3.0.0",
    "@vue/eslint-config-airbnb": "^3.0.0",
    "@vue/eslint-config-typescript": "^3.0.0",
    "@vue/test-utils": "^1.0.0-beta.10",
    "babel-core": "^7.0.0-0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^22.4.6",
    "tslint-config-airbnb": "^5.8.0",
    "vue-template-compiler": "^2.5.13"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
