{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the BrewBlox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "spark:reset": "bash app/reset_spark.sh app/presets/spark_blocks.json",
    "spark:sparkey": "npm run spark:reset -- sparkey",
    "spark:spock": "npm run spark:reset -- spock",
    "spark:blocks": "npm run spark:sparkey && npm run spark:spock",
    "couchdb:docs": "bash app/reset_ui.sh services dashboards dashboard-items",
    "compose:new": "docker-compose down && docker-compose up -d && npm run spark:blocks && npm run couchdb:docs",
    "serve": "vue-cli-service serve",
    "start": "npm run compose:new && npm run serve",
    "build": "vue-cli-service build",
    "devbuild": "npm run build && mkdir -p ./app/dist && rm -r ./app/dist/*; cp -r ./dist/* ./app/dist/",
    "test": "jest",
    "e2e": "npm run compose:new && vue-cli-service test:e2e --mode development",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "eslint": "eslint src --ext .js",
    "lint": "npm run tslint",
    "e2e:open": "vue-cli-service e2e:open"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "lodash": "^4.17.11",
    "parse-duration": "^0.1.1",
    "plotly.js-basic-dist": "^1.42.5",
    "portal-vue": "^1.4.0",
    "pouchdb": "^7.0.0",
    "quasar-extras": "^2.0.9",
    "quasar-framework": "^0.17.18",
    "query-string": "^6.2.0",
    "shortid": "^2.2.14",
    "typescript": "^3.1.6",
    "url-safe-string": "^1.1.0",
    "vue": "^2.5.17",
    "vue-class-component": "^6.3.2",
    "vue-i18n": "^8.3.1",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.1",
    "vue-svg-loader": "^0.9.0",
    "vuedraggable": "^2.16.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/plotly.js": "^1.41.0",
    "@types/pouchdb": "^6.3.2",
    "@types/query-string": "^6.1.1",
    "@types/shortid": "0.0.29",
    "@types/webpack": "^4.4.19",
    "@types/webpack-env": "^1.13.6",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-e2e-cypress": "^3.1.2",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-plugin-typescript": "^3.1.1",
    "@vue/cli-plugin-unit-jest": "^3.1.1",
    "@vue/cli-service": "^3.1.4",
    "@vue/eslint-config-airbnb": "^3.0.5",
    "@vue/eslint-config-typescript": "^3.1.1",
    "@vue/test-utils": "^1.0.0-beta.25",
    "babel-core": "^7.0.0-0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "git-describe": "^4.0.3",
    "semver": "^5.6.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^23.10.4",
    "tslint-config-airbnb": "^5.11.1",
    "tsutils": "^3.5.0",
    "vue-template-compiler": "^2.5.17"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
