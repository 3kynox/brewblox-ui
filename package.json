{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the BrewBlox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "makecert": "bash dev/makecert.sh",
    "spark:reset": "node dev/reset_spark.js dev/presets/spark_blocks.json",
    "spark:sparkey": "npm run spark:reset -- sparkey",
    "spark:spock": "npm run spark:reset -- spock",
    "spark:blocks": "npm run spark:sparkey && npm run spark:spock",
    "couchdb:docs": "node dev/reset_datastore.js dev/presets services dashboards dashboard-items layouts",
    "history:config": "curl -Sk -X POST https://localhost:9001/history/query/configure",
    "compose:new": "docker-compose down && npm run makecert && docker-compose up -d && npm run compose:setup",
    "compose:setup": "npm run spark:blocks && npm run couchdb:docs && npm run history:config",
    "serve": "quasar dev",
    "start": "npm run compose:new && npm run serve",
    "build": "quasar build",
    "devbuild": "rm -r dev/dist/*; quasar build && cp -r dist/* dev/dist/",
    "test": "npm run test:unit",
    "lint": "eslint --ext .js,.ts,.vue --ignore-path .gitignore ./src ./test",
    "lint:fix": "npm run lint -- --fix",
    "test:unit": "jest --updateSnapshot",
    "test:unit:coverage": "jest --coverage",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll",
    "serve:test:coverage": "quasar serve test/jest/coverage/lcov-report/ --port 8788",
    "concurrently:dev:jest": "concurrently \"quasar dev\" \"jest --watch\""
  },
  "dependencies": {
    "@quasar/extras": "^1.3.3",
    "dagre-d3": "^0.6.4",
    "fromentries": "^1.2.0",
    "lodash": "^4.17.15",
    "marked": "^0.7.0",
    "parse-duration": "^0.1.2",
    "plotly.js-basic-dist": "^1.51.3",
    "portal-vue": "^1.5.1",
    "pouchdb": "^7.1.1",
    "quasar": "^1.5.9",
    "query-string": "^6.9.0",
    "svg-path-properties": "^0.4.11",
    "url-safe-string": "^1.1.0",
    "vue": "^2.6.11",
    "vue-class-component": "^6.3.2",
    "vue-property-decorator": "^8.3.0",
    "vue-router": "^3.1.3",
    "vue-split-panel": "^1.0.4",
    "vuedraggable": "^2.23.2",
    "vuex": "^3.1.2"
  },
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-typescript": "^7.7.4",
    "@quasar/app": "^1.4.1",
    "@quasar/quasar-app-extension-testing": "^1.0.0",
    "@quasar/quasar-app-extension-testing-unit-jest": "^1.0.0",
    "@quasar/quasar-app-extension-typescript": "^1.0.0-beta.2",
    "@types/d3": "^5.7.2",
    "@types/jest": "^23.3.14",
    "@types/lodash": "^4.14.149",
    "@types/node": "11.9.5",
    "@types/plotly.js": "^1.44.20",
    "@types/pouchdb": "^6.4.0",
    "@types/webpack": "^4.41.0",
    "@types/webpack-chain": "^5.2.0",
    "@types/webpack-env": "^1.14.1",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "@vue/devtools": "^5.3.3",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.30",
    "babel-plugin-transform-imports": "^1.5.1",
    "eslint": "^5.0.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-quasar": "^1.0.0-alpha.17",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "eslint-plugin-vue": "^5.2.3",
    "fibers": "^4.0.2",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "git-describe": "^4.0.4",
    "jest": "^25.0.0",
    "node-sass": "^4.13.0",
    "prettier-eslint": "^9.0.1",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.8",
    "sass-loader": "^8.0.0",
    "ts-loader": "^6.2.1",
    "tsutils": "^3.17.1",
    "typescript": "^3.7.3",
    "vue-eslint-parser": "^5.0.0",
    "vue-template-compiler": "^2.6.11",
    "vuex-module-decorators": "^0.9.11"
  },
  "engines": {
    "node": ">= 10.13.0",
    "npm": ">= 6.4.1"
  },
  "browserslist": [
    "last 1 version, not dead, ie >= 11"
  ]
}
