{
  "name": "brewblox-ui",
  "version": "0.1.0",
  "description": "UI for the BrewBlox brewing controller",
  "author": "Elco Jacobs / BrewPi B.V.",
  "repository": "https://github.com/BrewBlox/brewblox-ui",
  "license": "GPL-3.0",
  "scripts": {
    "spark:reset": "node dev/reset_spark.js dev/presets/spark_blocks.json",
    "spark:sparkey": "npm run spark:reset -- sparkey",
    "spark:spock": "npm run spark:reset -- spock",
    "spark:blocks": "npm run spark:sparkey && npm run spark:spock",
    "couchdb:docs": "node dev/reset_datastore.js dev/presets services dashboards dashboard-items",
    "cert:check": "bash dev/check_cert.sh",
    "compose:new": "docker-compose down && npm run cert:check && docker-compose up -d && npm run spark:blocks && npm run couchdb:docs",
    "serve": "vue-cli-service serve",
    "start": "npm run compose:new && npm run serve",
    "build": "vue-cli-service build --modern",
    "devbuild": "npm run build && mkdir -p ./dev/dist && rm -r ./dev/dist/*; cp -r ./dist/* ./dev/dist/",
    "test": "jest",
    "e2e": "npm run compose:new && vue-cli-service test:e2e --mode development",
    "lint": "eslint \"src/**/*.{js,ts,vue}\"",
    "fix": "npm run lint -- --fix",
    "e2e:open": "vue-cli-service e2e:open"
  },
  "engines": {
    "node": ">= 8.9.0",
    "npm": ">= 5.6.0"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "lodash": "^4.17.11",
    "parse-duration": "^0.1.1",
    "plotly.js-basic-dist": "^1.43.1",
    "portal-vue": "^1.5.1",
    "pouchdb": "^7.0.0",
    "quasar-extras": "^2.0.9",
    "quasar-framework": "^0.17.18",
    "query-string": "^6.2.0",
    "shortid": "^2.2.14",
    "typescript": "^3.2.4",
    "url-safe-string": "^1.1.0",
    "vue": "^2.5.21",
    "vue-class-component": "^6.3.2",
    "vue-i18n": "^8.6.0",
    "vue-property-decorator": "^7.2.0",
    "vue-router": "^3.0.2",
    "vue-svg-loader": "^0.9.0",
    "vuedraggable": "^2.17.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.11",
    "@types/plotly.js": "^1.42.0",
    "@types/pouchdb": "^6.3.2",
    "@types/query-string": "^6.1.1",
    "@types/shortid": "0.0.29",
    "@types/webpack": "^4.4.22",
    "@types/webpack-env": "^1.13.6",
    "@vue/cli-plugin-babel": "^3.2.2",
    "@vue/cli-plugin-e2e-cypress": "^3.2.2",
    "@vue/cli-plugin-eslint": "^3.2.2",
    "@vue/cli-plugin-typescript": "^3.2.2",
    "@vue/cli-plugin-unit-jest": "^3.2.2",
    "@vue/cli-service": "^3.2.2",
    "@vue/eslint-config-typescript": "^3.2.0",
    "@vue/test-utils": "^1.0.0-beta.28",
    "babel-core": "^7.0.0-0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "dotenv": "^6.2.0",
    "eslint": "^5.12.1",
    "git-describe": "^4.0.3",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "semver": "^5.6.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^23.10.5",
    "tsutils": "^3.6.0",
    "typescript-eslint-parser": "^21.0.2",
    "vue-cli-plugin-webpack-bundle-analyzer": "^1.2.0",
    "vue-eslint-parser": "^4.0.3",
    "vue-template-compiler": "^2.5.21"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
