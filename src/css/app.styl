// app global css
@import './themes/dark.variables'
@import "~quasar-framework/dist/quasar.mat.styl";

.router-link-active
  color $info

.q-input-target
  color $standard-text-color

.q-popover
  color $standard-text-color
  background-color $block-background

.text-dark-bright {
  color: $white_very;
}

.bg-dark-bright {
  background: $dark_bright;
}

.q-stepper-tab.step-waiting, .q-stepper-step-content {
  color: $white_very;
}

.q-stepper, .q-stepper-header {
  box-shadow: none;
}

.q-stepper-horizontal .q-stepper-step-inner,
.q-stepper-tab {
  padding: 24px 0;
}
